# KoroMind - Environment Configuration
# Copy this file to .env and fill in values

# =============================================================================
# REQUIRED - Core
# =============================================================================
# Anthropic API key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs API key from https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# TELEGRAM INTERFACE (Required for Telegram bot)
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_DEFAULT_CHAT_ID=0

# =============================================================================
# REST API SERVER
# =============================================================================
# API authentication key (set this to secure the API)
KOROMIND_API_KEY=your_secret_api_key_here
# Allow running the API without auth (development only)
KOROMIND_ALLOW_NO_AUTH=false

# Comma-separated list of allowed CORS origins
KOROMIND_CORS_ORIGINS=http://localhost:3000

# API server bind address and port
KOROMIND_HOST=127.0.0.1
KOROMIND_PORT=8420

# =============================================================================
# DATA STORAGE
# =============================================================================
# Directory for KoroMind data (SQLite database, config)
# Default: ~/.koromind
KOROMIND_DATA_DIR=~/.koromind

# =============================================================================
# PERSONA CONFIGURATION
# =============================================================================
# Display name for logging
PERSONA_NAME=Koro

# Path to system prompt file (relative to repo root or absolute)
# Leave empty for default minimal prompt
SYSTEM_PROMPT_FILE=src/prompts/koro.md

# ElevenLabs voice ID
# George: JBFqnCBsd6RMkjVDRZzb (default)
# Daniel: onwK4e9ZLuTAKqWW03F9
# Charlie: IKne3meq5aSn9XLyUdCD
ELEVENLABS_VOICE_ID=JBFqnCBsd6RMkjVDRZzb

# =============================================================================
# TOPIC FILTERING (Optional - Telegram only)
# =============================================================================
# If set, bot only responds to messages in this Telegram topic
# Leave empty to respond to all messages in the chat
TELEGRAM_TOPIC_ID=

# =============================================================================
# DIRECTORIES
# =============================================================================
# Directory for Claude to read files from
CLAUDE_WORKING_DIR=/koromind-work-dir

# Sandbox directory - Claude can write/execute here
CLAUDE_SANDBOX_DIR=/koromind-sandbox

# Optional: Settings file for Claude permissions
# CLAUDE_SETTINGS_FILE=/path/to/settings.json

# =============================================================================
# LIMITS
# =============================================================================
# Max characters for voice response (longer = more TTS cost)
MAX_VOICE_RESPONSE_CHARS=500

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
